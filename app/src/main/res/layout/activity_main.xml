<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="200dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="188dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623" />

    <EditText
        android:id="@+id/editTextFieldId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="156dp"
        app:layout_constraintBottom_toBottomOf="@id/textViewId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/buttonId" />

    <Button
        android:id="@+id/buttonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="196dp"
        android:layout_marginBottom="68dp"
        android:text="click me"
        app:layout_constraintBottom_toBottomOf="@id/editTextFieldId"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/webViewButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="196dp"
        android:onClick="goToWebViewActivity"
        android:text="WebView Activity"
        app:layout_constraintBottom_toBottomOf="@id/editTextFieldId"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>